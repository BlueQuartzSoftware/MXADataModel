<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Data_Import SYSTEM "http://titanium.imts.us/viewvc/Task_7/MXADataModel/Resources/mxa_import.dtd">
<Data_Import>

	<!-- Load a Template Model from an XML file -->
	<Data_Model
		Template_File="@DATA_MODEL_XML_FILE@">
		<!-- Define the dimensions  -->
    <Data_Dimensions>
        <Dimension Alt_Name="Rnd Seed" Count="4" End_Value="2500" Increment="500" Index="1" Name="Dim 1" Start_Value="1000" Uniform="1" />
        <Dimension Alt_Name="TS" Count="5" End_Value="99" Increment="1" Index="2" Name="Dim 2" Start_Value="95" Uniform="1" />
        <Dimension Alt_Name="Vol Frac" Count="3" End_Value="50" Increment="2" Index="0" Name="Dim 0" Start_Value="46" Uniform="1" />
        <Dimension Alt_Name="slice" Count="5" End_Value="255" Increment="1" Index="3" Name="Dim 3" Start_Value="251" Uniform="1" />
    </Data_Dimensions>
	</Data_Model>

	<!--  Define the Output file to store the data -->
	<Output_File Absolute_Path="/tmp/XML_Based_Data_Import_Test.h5" />

	<!--  Define the data sources for each Data Record and Dimension Values
		/Users/mjackson/Task_7/Data/Mike-Uchic-Data/IN100_25JUN04_DISC1/7000_Series/7000.tif
		Data_Record needs to be the full path to the Data Record 
		Source_Type is the quick description of the contents of the file. This should
		be from a known list of types that are supported or supplied by the user. -->
	<Implicit_Data_Source Data_Record="Record 0" Source_Type="H5TiffImport">
		<File_Path>
			<Text_Part
				Text="/tmp/test_data/Dim0-" />
			<Index_Part Padding_Char="0" 
			 Total_Char_Length="3"
				Numeric_Type="Integer" 
				Data_Dimension="Dim 0" />
			<Text_Part Text="/Dim1-" />
			<Index_Part Padding_Char="0" 
			 Total_Char_Length="4"
				Numeric_Type="Integer" 
				Data_Dimension="Dim 1" />
			<Text_Part Text="/Dim2-" />
      <Index_Part Padding_Char="0" 
       Total_Char_Length="4"
        Numeric_Type="Integer" 
        Data_Dimension="Dim 2" />
      <Text_Part Text="/Dim3-" />
      <Index_Part Padding_Char="0" 
       Total_Char_Length="6"
        Numeric_Type="Integer" 
        Data_Dimension="Dim 3" />
			<Text_Part Text=".tif" />
		</File_Path>
	</Implicit_Data_Source> 


	
	<!-- We can also explicitly declare each source file to be imported
	<Explicit_Data_Source DataDimension_Values="7000 0"
		Data_Record="Secondary Electron Image"
		File_Path="/Users/mjackson/Desktop/VF40_t010.tif"
		Source_Type="H5TiffImport" />

	<Explicit_Data_Source DataDimension_Values="7000 1"
		Data_Record="Secondary Electron Image"
		File_Path="/Users/mjackson/Desktop/VF40_t020.tif" 
		Source_Type="H5TiffImport"/>
		
		-->
</Data_Import>
